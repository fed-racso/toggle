<div class="tg-teaser-item--portrait">
  <a href="{{ url }}">
    <div class="img-holder">
      {{> atoms-portrait }}
      <div class="item__type">
        <i class="type-icon-{{type}}"></i>
      </div>
      <div class="item__labels">
        {{#icon-labels}}
        <img class="label__img" src="{{label}}"/>
        {{/icon-labels}}
      </div>
    </div>
  </a>
  <div class="item__info">
    <h6 class="item__title {{#featured}} h3 {{/featured}}" data-dotdot="2">
      <a href="#">Item Title: Lorem ipsum dolor sit amet, more consectetur adipisicing elit!</a>
    </h6>
    {{> atoms-meta-item-with-icon }}
  </div>
  <p class="desc" data-dotdot="3">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
  </p>
</div>